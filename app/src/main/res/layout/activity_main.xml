<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.daidai.abstrusewriting.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragmet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="2dp">
    <RadioGroup
            android:id="@+id/main_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_tab_item_homepage"
                android:drawableTop="@android:drawable/ic_menu_compass"
                android:layout_marginLeft="15dp"
                android:text="首页"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/radiobtn_sty"
               />
            <RadioButton
                android:id="@+id/main_tab_item_subscription"
                android:drawableTop="@android:drawable/btn_star"
                android:text="订阅"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                style="@style/radiobtn_sty"/>
            <RadioButton
                android:id="@+id/main_tab_item_discover"
                android:drawableTop="@android:drawable/ic_menu_search"
                android:text="发现"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                style="@style/radiobtn_sty"/>

            <RadioButton
                android:id="@+id/main_tab_item_personal"
                android:drawableTop="@android:drawable/ic_menu_myplaces"
                android:layout_marginRight="15dp"
                android:text="我的"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/radiobtn_sty"/>

        </RadioGroup>


    </android.support.v7.widget.CardView>


</FrameLayout>
